@model GestiuneBileteAvion.Models.Bilet

@{
    ViewBag.Title = "Editare Bilet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editare Oferta</h2>
<h3>@Model.LoculPlecarii - @Model.LoculSosirii</h3>

@using (Html.BeginForm("Creare", "Bilet"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.LoculPlecarii)
        @Html.TextBoxFor(m => m.LoculPlecarii, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LoculPlecarii, "Va rugam adaugati statia de plecare")
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LoculSosirii)
        @Html.TextBoxFor(m => m.LoculSosirii, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LoculPlecarii, "Va rugam adaugati statia de sosire")
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DataPlecarii)
        @Html.TextBoxFor(m => m.DataPlecarii, "{0:dd-MMM-yyyy}", new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.LoculPlecarii, "Va rugam adaugati data calatoriei")
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Pret)
        @Html.TextBoxFor(m => m.Pret, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LoculPlecarii, "Va rugam adaugati pretul biletului")
    </div>

    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-primary">Salvare</button>
}